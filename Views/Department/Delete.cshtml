@model HolidayTracker.Models.Department.Department

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Department Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class = "col-sm-2" style="display:none">
            Company Id
        </dt>
        <dd class = "col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.CompanyId)
        </dd>
        <dt class = "col-sm-2" style="display:none">
            Department Code
        </dt>
        <dd class = "col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.DepartmentCode)
        </dd>
        <dt class = "col-sm-2" style="display:none">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class = "col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>


