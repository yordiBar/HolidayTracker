<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LocationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].LeavingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].EmployeeTypeId)
