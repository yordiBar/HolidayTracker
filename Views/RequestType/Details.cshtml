@model HolidayTracker.Models.RequestType.RequestType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Request Type</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Request Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestTypeName)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2" style="display:none">
            Takes From Allowance
        </dt>
        <dd class="col-sm-10" style="display:none">
            @Html.DisplayFor(model => model.TakesFromAllowance)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
