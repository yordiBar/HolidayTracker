@model HolidayTracker.Controllers.ApprovalsViewModel;
@{
    ViewData["Title"] = "Requests";
}

<div class="text-center">
    <h4 class="display-4">Employees' requests</h4>
    <p>These are requests of employees assigned to you</p>
</div>

<h2>Pending Requests</h2>
<p>
    <a asp-action="DisplayAllRequests">View Request History</a>
</p>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Requested By</th>
                                <th>Request Type</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Requested Amount</th>
                                <th>Status</th>
                                <th>Comments</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Requests)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.DisplayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequestType.RequestTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.From)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.To)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequestAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisplayStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Approve</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Reject</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Requested By</th>
                                <th>Request Type</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Requested Amount</th>
                                <th>Status</th>
                                <th>Comments</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

